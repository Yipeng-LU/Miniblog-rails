<h1> Edit page </h1>
<%if @data %>
<% if @data.errors.any? %>
    <% @data.errors.full_messages.each do |msg| %>
        <p class='alert alert-danger'><%= msg %></p>
    <% end %>
<% end %>
<% end %>
<%=form_for :data,url:yipenglu_path(@data),method: :patch do |f|%>
    <p>
        <%= f.label(:title,{:class => 'formTitle'}) %><br>
        <%= f.text_field(:title,{:class => 'form-control'}) %>
    </p>
    
    <p>
        <%= f.label(:content,{:class => 'formTitle'}) %><br>
        <%= f.text_area(:body,{:class => 'form-control'}) %>
    </p>
    
    <p>
        <%= f.label(:datetime,{:class => 'formTitle'}) %><br>
        <%= f.date_field(:date,{:class => 'form-control'}) %>
    </p>
    
    <p>
        <%= f.label( :username,{:class => 'formTitle'}) %><br>
        <%= f.text_field(:username,{:class => 'form-control'}) %>
    </p>
    <p>
        <%= f.submit(:save_change,{:class => 'btn btn-primary'}) %>
<% end %>